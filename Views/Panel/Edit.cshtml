@model PostViewModel

@{

 }
<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />

@*<h1 class="pt-2">Edit Post</h1>*@

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div>
                @if(Model.Id > 0)
                {
                <h1 class="mt-3 mb-2">Edit Post:</h1>
                }
                else
                {
                    <h1 class="mt-3 mb-2">Create Post:</h1>
                }

                <form asp-action="Edit" asp-controller="panel" method="post"
                      enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div>
                        <label>Title:</label>
                        <input asp-for="Title" />
                    </div>
                    <div>
                        <label>SubTitle:</label>
                        <input asp-for="SubTitle" />
                    </div>
                    <div>
                        <label>Author:</label>
                        <input asp-for="Author" />
                    </div>
                    
                    <div>
                        <label>Body:</label>

                        <textarea id="editor" asp-for="Body"></textarea>
                    </div>
                    <div>
                        <label>Image</label>

                        <input asp-for="Image" />
                        <input asp-for="CurrentImage" type="hidden"/>
                    </div>
                    <div id="success"></div>
                    <button type="submit" class="btn btn-primary" id="sendMessageButton">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/lib/Trumbowyg-master/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
<script>
    (document).ready(function () {
       $('.custom-file-input').on("change", function () {
           var fileName = $(this).val().split("\\").pop();
           $(this).next('.custom-file-label').html(fileName);
       });
    });
</script>
}




